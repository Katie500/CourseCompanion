@code {

    public string searchQuery = "";

    private List<CourseDetails> courses;

    protected override async Task OnInitializedAsync()
    {
        courses = await GetCourseDetails();
    }

    private async ValueTask<ItemsProviderResult<CourseDetails>> LoadCourseDetails(ItemsProviderRequest request)
    {
        var courses = await GetCourseDetails();
        return new ItemsProviderResult<CourseDetails>(courses.Skip(request.StartIndex).Take(request.Count), courses.Count());
    }
    
    private async Task<List<CourseDetails>> GetCourseDetails()
{
    List<CourseDetails> courseList = new List<CourseDetails>();
    CourseDatabase courseDatabase = new CourseDatabase();

    for (int i = 0; i < courseDatabase.Courses.Count(); i++)
    {
        var courseDetails = courseDatabase.Courses[i];
        courseList.Add(courseDetails);
    }

    return await Task.FromResult(courseList);
}

