@page "/"
@using System.Linq
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Cards
@inject HttpClient Http

<PageTitle>Index</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-6 text-center">
            <!-- Left section -->

            <!--Search Bar-->
            <div class="text-center bg-blue-100">
                <input class="w-75 rounded m-6 p-6 h-8
               border-blue-300" placeholder="Course search..." />
            </div>

            <!--Course Results List-->
            <div style="height:650px;overflow-y:scroll">
                <table class="table">
                    <tbody>
                        @foreach (var course in courses)
                        {
                            <tr>
                                <td>
                                    <SfCard>
                                        <CardHeader>@course.Id</CardHeader>
                                        <CardContent>@course.Title</CardContent>
                                        <CardContent>@course.Title</CardContent>
                                    </SfCard>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>  

        <div class="col-lg-8 col-md-6 text-center">
            <!-- Right section -->
            <div class="row text-center">
                <div class="col-lg-6">
                    <!-- Left container -->
                    <div class="card bg-gradient bg-opacity-25 bg-info">
                        <div class="card-body">
                            <h5 class="card-title bg-gradient bg-opacity-50 bg-info text-center"><b>Fall 2023</b></h5>
                            <div class="btn-group-vertical w-100" role="group">
                                <button type="button" class="btn btn-primary btn-lg btn-block">CPSC 231</button> <br />
                                <button type="button" class="btn btn-success btn-lg btn-block">PHIL 279</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">MATH 211</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">FILM 201</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">SOCI 201</button> <br />
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6 text-center">
                    <!-- Right container -->
                    <div class="card bg-opacity-25 bg-warning">
                        <div class="card-body">
                            <h5 class="card-title bg-opacity-50 bg-warning text-center"><b>Winter 2024</b></h5>
                            <div class="btn-group-vertical w-100 " role="group">
                                <button type="button" class="btn btn-primary btn-lg btn-block">CPSC 233</button> <br />
                                <button type="button" class="btn btn-success btn-lg btn-block">PHIL 314</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">MATH 265</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">FILM 203</button> <br />
                                <button type="button" class="btn btn-info btn-lg btn-block">SPAN 201</button> <br />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 text-center">
                        <br /><br />
                        <button type="button" class="btn btn-primary btn-outline-primary text-center">Go To Spring/Summer</button>
                        <br /><br /><br /><br /><br /><br />
                        <button type="button" class="btn btn-danger text-center">Reset</button>
                        <button type="button" class="btn btn-danger text-center">Export</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private CourseDetails[]? courses;

    protected override async Task OnInitializedAsync()
    {
        courses = await Http.GetFromJsonAsync<CourseDetails[]>("sample-data/courses.json");
    }

    public class CourseDetails
    {
        public string Id { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
        public string Instructor { get; set; }
        public int Levels { get; set; }
        public int Credits { get; set; }
        public string Category { get; set; }
        public string Semester { get; set; }
        public string Faculty { get; set; }
    }

}
<style>
    .e-card {
        background-color: antiquewhite;
        height: 80px;
    }
</style>
